<div class="container">
<h1>New Game</h1>

<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<p> What's the longest word you can find? </p>
<form action="/score" method="post" class="input-group">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" class="form-control form-inline" name="word" placeholder="Enter a word here.">
  <input type="submit" class="input-group-addon btn-primary" value="Play!">
</form>

